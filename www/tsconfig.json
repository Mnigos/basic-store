{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/jest",
      "@nuxtjs/axios",
      "nuxt-socket-io",
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.vue",
    "test/**/*.ts"
, "plugins/vuex-persist.client.js", "plugins/vuex-persist.client.js"  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
    "cypress"
  ]
}
